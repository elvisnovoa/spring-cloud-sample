<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
				%d{yyyy-MM-dd HH:mm:ss} %-5level %logger.%M - %msg%n
			</pattern>
		</encoder>
	</appender>
	
	<root level="info">
		<appender-ref ref="stdout" />
	</root>

	<logger name="com.sample" level="trace" additivity="false">
		<appender-ref ref="stdout" />
	</logger>

</configuration>